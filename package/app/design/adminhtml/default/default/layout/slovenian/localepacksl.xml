<layout>
    <default>
        <reference name="head">
            <!--Remove TinyMCE setup-->
            <action method="removeItem">
                <type>js</type>
                <name>mage/adminhtml/wysiwyg/tiny_mce/setup.js</name>
            </action>

            <!--Add TinyMCE setup with "sl" language-->
            <action method="addJs">
                <script>slovenian/setup.js</script>
            </action>
        </reference>
    </default>
</layout>
